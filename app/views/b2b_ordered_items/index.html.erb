<p id="notice"><%= notice %></p>

<h1>Listing B2b Ordered Items</h1>

<table>
  <thead>
    <tr>
      <th>B2b order</th>
      <th>Seller</th>
      <th>Poi</th>
      <th>Offer</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>O status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @b2b_ordered_items.each do |b2b_ordered_item| %>
      <tr>
        <td><%= b2b_ordered_item.b2b_order %></td>
        <td><%= b2b_ordered_item.seller %></td>
        <td><%= b2b_ordered_item.poi_id %></td>
        <td><%= b2b_ordered_item.offer %></td>
        <td><%= b2b_ordered_item.quantity %></td>
        <td><%= b2b_ordered_item.value %></td>
        <td><%= b2b_ordered_item.o_status %></td>
        <td><%= link_to 'Show', b2b_ordered_item %></td>
        <td><%= link_to 'Edit', edit_b2b_ordered_item_path(b2b_ordered_item) %></td>
        <td><%= link_to 'Destroy', b2b_ordered_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

