<p id="notice"><%= notice %></p>

<h1>Listing Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Seller</th>
      <th>Order</th>
      <th>Offer</th>
      <th>Stock</th>
      <th>Product</th>
      <th>Chat</th>
      <th>Content</th>
      <th>Ntype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.customer %></td>
        <td><%= notification.seller %></td>
        <td><%= notification.order %></td>
        <td><%= notification.offer %></td>
        <td><%= notification.stock %></td>
        <td><%= notification.product %></td>
        <td><%= notification.chat %></td>
        <td><%= notification.content %></td>
        <td><%= notification.ntype %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>
