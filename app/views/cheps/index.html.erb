<h1>Listing Cheps</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Order</th>
      <th>Delivery date</th>
      <th>Chep issued</th>
      <th>Chep due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheps.each do |chep| %>
      <tr>
        <td><%= chep.customer %></td>
        <td><%= chep.order %></td>
        <td><%= chep.delivery_date %></td>
        <td><%= chep.chep_issued %></td>
        <td><%= chep.chep_due %></td>
        <td><%= link_to 'Show', chep %></td>
        <td><%= link_to 'Edit', edit_chep_path(chep) %></td>
        <td><%= link_to 'Destroy', chep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

