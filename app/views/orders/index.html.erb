<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Seller</th>
      <th>Items</th>
      <th>Order approved date</th>
      <th>Shipping address</th>
      <th>O status</th>
      <th>Total due</th>
      <th>Invoice number</th>
      <th>Item shipped date</th>
      <th>Consignment number</th>
      <th>Transport contact name</th>
      <th>Transport contact number</th>
      <th>Item received date</th>
      <th>Item recevied by name</th>
      <th>Item received by number</th>
      <th>Payment done date</th>
      <th>Payment confirmed by</th>
      <th>Note to buyer</th>
      <th>Note to seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer %></td>
        <td><%= order.seller %></td>
        <td><%= order.items %></td>
        <td><%= order.order_approved_date %></td>
        <td><%= order.shipping_address %></td>
        <td><%= order.o_status %></td>
        <td><%= order.total_due %></td>
        <td><%= order.invoice_number %></td>
        <td><%= order.item_shipped_date %></td>
        <td><%= order.consignment_number %></td>
        <td><%= order.transport_contact_name %></td>
        <td><%= order.transport_contact_number %></td>
        <td><%= order.item_received_date %></td>
        <td><%= order.item_recevied_by_name %></td>
        <td><%= order.item_received_by_number %></td>
        <td><%= order.payment_done_date %></td>
        <td><%= order.payment_confirmed_by %></td>
        <td><%= order.note_to_buyer %></td>
        <td><%= order.note_to_seller %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

