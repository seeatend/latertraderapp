        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="box">
    <div class="box-body">
    <br/>
    <br/>
      <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", placeholder: "ABC Pty Ltd" %>
            
          </div>
          <div class="form-group col-md-6">
             <%= f.label :company,'Business Legal Name' %><br>
            <%= f.text_field :company, class: "form-control", placeholder: "ABC Pty Ltd" %>
          
          </div>
        </div>
         <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :growers_email_id %><br>
    <%= f.text_field :growers_email_id, class: "form-control", placeholder: "abc@abc.com"  %>
            
          </div>
          <div class="form-group col-md-6">
                <%= f.label :mobile_number %>
            <%= f.text_field :mobile_number, class: "form-control", placeholder: "0412 123 123"  %>
          
          </div>
        </div>
          <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control", placeholder: "John Smith Pty Ltd, 8904 Chesnut Avenue, Sydney NSW 2001" %>
        </div>
          <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control", placeholder: "Sydney" %>
            
          </div>
          <div class="form-group col-md-6">
             <%= f.label :state%><br>
            <%= f.text_field :state, class: "form-control", placeholder: "NSW" %>
          
          </div>
        </div>
  
        <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :zip_code,'Postcode' %><br>
            <%= f.text_field :zip_code, class: "form-control", placeholder: "1234" %>
        
        </div>
        <div class="form-group col-md-6">
         <%= f.label :telephone_number %><br>
    <%= f.text_field :telephone_number, class: "form-control", placeholder: "(02) 1234 1234" %>
        </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :certificates %><br>
            <%= f.select :certificates, ['HACCP',
'ISO',
'QA',
'SQF',
'WQA',
'YLGG',
'COLES',
'BRC',
'FC'],{}, {:multiple => true,:class => 'btn white dropdown-toggle' }%>
