          <div class="form-group col-md-6">
             <%= f.label :balance %><br>
            <%= f.text_field :balance, class: "form-control", placeholder: "16324" %>
          </div>
          
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            
          </div>

          <div class="form-group col-md-6">
          
          </div>
          
        </div>
          <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :order_to_date %><br>
            <%= f.text_field :order_to_date, class: "form-control", placeholder: "7031" %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :status %><br>
            <%= f.text_field :status, class: "form-control", placeholder: "Active" %>
          </div>
          
        </div>
        <div class="form-group">
          <div class="form-check">
            
    <%= f.label :smcs_member %><br>
    <%= f.check_box :smcs_member  %>
          </div>
          <%= f.hidden_field :seller_id, value: Seller.where(:uid => current_user.id).first.id %>
        </div>
         <%= f.submit 'Submit', :class => 'btn btn-fw success' %>

      </form>
    </div>
  </div>


