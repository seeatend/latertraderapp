<script src="js/multislider.js"></script>

<script>
$(function() {
  $('#mixedSlider').multislider({
    duration: 750,
    interval: 6000,
    continuous: false
  });
  
  $('.tool_tip').tooltip();
  
  $('ul.kind-categories li, ul.type-categories li, ul.visible-categories li').click(function() {
    $(this).closest("ul").find("li").each(function() {
      $(this).removeClass("active");
    });
    $(this).addClass("active");
  })
})
$(document).on("click", ".open-AddPointDialog", function () {

     var oid = $(this).data('oid');
     var cid = $(this).data('cid');
     var sid = $(this).data('sid');
     var otid = $(this).data('otid');
     var qty = $(this).data('qty');

     $(".modal-body #cart_customer_id").val( cid );
     $(".modal-body #cart_offer_id").val( oid );
     $(".modal-body #cart_seller_id").val( sid );
     $(".modal-body #cart_otype").val( otid );
     $(".modal-body #cart_quantity").val(qty);
});
</script>






