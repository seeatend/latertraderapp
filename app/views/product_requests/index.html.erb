<p id="notice"><%= notice %></p>

<h1>Listing Product Requests</h1>

<table>
  <thead>
    <tr>
      <th>Seller</th>
      <th>Product</th>
      <th>Required quantity</th>
      <th>Required date</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_requests.each do |product_request| %>
      <tr>
        <td><%= product_request.seller %></td>
        <td><%= product_request.product %></td>
        <td><%= product_request.required_quantity %></td>
        <td><%= product_request.required_date %></td>
        <td><%= product_request.note %></td>
        <td><%= link_to 'Show', product_request %></td>
        <td><%= link_to 'Edit', edit_product_request_path(product_request) %></td>
        <td><%= link_to 'Destroy', product_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

